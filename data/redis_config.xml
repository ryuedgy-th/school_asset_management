<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Redis Configuration for Rate Limiting -->
        <!-- These parameters are used by SignatureSecurityHelper -->

        <!-- Redis Connection Settings -->
        <record id="config_redis_host" model="ir.config_parameter">
            <field name="key">school_asset.redis_host</field>
            <field name="value">localhost</field>
        </record>

        <record id="config_redis_port" model="ir.config_parameter">
            <field name="key">school_asset.redis_port</field>
            <field name="value">6379</field>
        </record>

        <record id="config_redis_db" model="ir.config_parameter">
            <field name="key">school_asset.redis_db</field>
            <field name="value">0</field>
        </record>

        <!-- Redis Password (Optional - leave empty if not needed) -->
        <record id="config_redis_password" model="ir.config_parameter">
            <field name="key">school_asset.redis_password</field>
            <field name="value"></field>
        </record>

        <!-- Rate Limiting Settings -->
        <record id="config_rate_limit_requests" model="ir.config_parameter">
            <field name="key">school_asset.rate_limit_requests</field>
            <field name="value">10</field>
        </record>

        <record id="config_rate_limit_window" model="ir.config_parameter">
            <field name="key">school_asset.rate_limit_window_seconds</field>
            <field name="value">3600</field>
        </record>

    </data>
</odoo>
