<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
            Default Configuration for School Asset Management
            These parameters are created only during installation (noupdate="1")
        -->

        <!-- Security: HMAC Secret Key for Signature Tokens -->
        <!-- Note: Auto-generated by post_init_hook in __init__.py -->
        <!-- Removed from XML to avoid duplicate key constraint violations -->

        <!-- Token Expiration Settings -->
        <record id="config_checkout_token_expiry_days" model="ir.config_parameter">
            <field name="key">school_asset.checkout_token_expiry_days</field>
            <field name="value">7</field>
        </record>

        <record id="config_damage_token_expiry_days" model="ir.config_parameter">
            <field name="key">school_asset.damage_token_expiry_days</field>
            <field name="value">3</field>
        </record>

        <record id="config_approval_token_expiry_days" model="ir.config_parameter">
            <field name="key">school_asset.approval_token_expiry_days</field>
            <field name="value">7</field>
        </record>

        <!-- Allowed Domains for HTTP Referer Validation -->
        <!-- Format: comma-separated list of domains (e.g., "example.com,www.example.com") -->
        <record id="config_allowed_domains" model="ir.config_parameter">
            <field name="key">school_asset.allowed_signature_domains</field>
            <field name="value">localhost,127.0.0.1,128.199.203.205,magicyears.ac.th</field>
        </record>

    </data>
</odoo>
