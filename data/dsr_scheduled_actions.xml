<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
            Scheduled Action: Check DSR Request Deadlines
            Runs daily to check for requests approaching deadline (30 days from request date)
            Sends warning emails 3 days before deadline
        -->
        <record id="ir_cron_check_dsr_deadlines" model="ir.cron">
            <field name="name">DSR: Check Request Deadlines</field>
            <field name="model_id" ref="model_asset_data_request"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_deadlines()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="priority">5</field>
        </record>
    </data>
</odoo>
