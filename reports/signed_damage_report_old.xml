<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Student Damage Report PDF -->
    <template id="report_signed_damage_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Header -->
                        <div class="text-center" style="margin-bottom: 20px; border-bottom: 3px solid #dc3545; padding-bottom: 15px;">
                            <h2 style="color: #dc3545; margin-bottom: 5px; font-weight: bold;">‚ö†Ô∏è ASSET DAMAGE REPORT</h2>
                            <h4 style="color: #003366; margin-top: 0;">MYIS International School</h4>
                            <p style="font-size: 12px; color: #666; margin: 5px 0;">
                                Signed Document - <span t-esc="o.damage_acknowledge_date.strftime('%B %d, %Y at %I:%M %p') if o.damage_acknowledge_date else 'N/A'"/>
                            </p>
                        </div>

                        <!-- Student Information -->
                        <div style="margin-bottom: 20px;">
                            <h5 style="background-color: #003366; color: white; padding: 8px 10px; margin-bottom: 10px;">
                                Student Information
                            </h5>
                            <table style="width: 100%; font-size: 13px;">
                                <tr>
                                    <td style="width: 25%; padding: 5px;"><strong>Student Name:</strong></td>
                                    <td style="width: 25%; padding: 5px;"><span t-esc="o.student_name"/></td>
                                    <td style="width: 25%; padding: 5px;"><strong>Grade Level:</strong></td>
                                    <td style="width: 25%; padding: 5px;"><span t-esc="o.grade_level"/></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px;"><strong>Assignment Number:</strong></td>
                                    <td style="padding: 5px;"><span t-esc="o.name"/></td>
                                    <td style="padding: 5px;"><strong>Check-in Date:</strong></td>
                                    <td style="padding: 5px;"><span t-esc="o.actual_return_date.strftime('%B %d, %Y') if o.actual_return_date else 'N/A'"/></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px;"><strong>Parent/Guardian:</strong></td>
                                    <td colspan="3" style="padding: 5px;"><span t-esc="o.parent_name"/> (<span t-esc="o.parent_email"/>)</td>
                                </tr>
                            </table>
                        </div>

                        <!-- Damage Alert -->
                        <div style="background-color: #f8d7da; border: 2px solid #dc3545; padding: 15px; margin-bottom: 20px;">
                            <h5 style="color: #721c24; margin: 0 0 10px 0; font-weight: bold;">
                                DAMAGE IDENTIFIED DURING CHECK-IN
                            </h5>
                            <p style="margin: 0; color: #721c24; font-size: 12px;">
                                The following asset(s) were returned with damage. As per the signed Asset Use Agreement,
                                parents/guardians are financially responsible for damage caused by negligence or misuse.
                            </p>
                        </div>

                        <!-- Damaged Assets Details -->
                        <div style="margin-bottom: 20px;">
                            <h5 style="background-color: #dc3545; color: white; padding: 8px 10px; margin-bottom: 10px;">
                                Damaged Assets
                            </h5>

                            <t t-foreach="o.asset_line_ids.filtered(lambda l: l.damage_found)" t-as="line">
                                <div style="margin-bottom: 20px; border: 1px solid #ffc107; background-color: #fff3cd; padding: 15px; page-break-inside: avoid;">
                                    <!-- Asset Header -->
                                    <table style="width: 100%; margin-bottom: 10px;">
                                        <tr>
                                            <td style="width: 70%;">
                                                <h6 style="margin: 0; color: #856404; font-size: 14px; font-weight: bold;">
                                                    <span t-esc="line.asset_name"/>
                                                </h6>
                                                <p style="margin: 2px 0 0 0; font-size: 12px; color: #856404;">
                                                    Asset Code: <strong><span t-esc="line.asset_code"/></strong>
                                                </p>
                                            </td>
                                            <td style="width: 30%; text-align: right; vertical-align: top;">
                                                <div style="background-color: #dc3545; color: white; padding: 8px; font-weight: bold; font-size: 14px;">
                                                    Repair Cost: $<span t-esc="'%.2f' % line.repair_cost"/>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>

                                    <!-- Condition Comparison -->
                                    <table style="width: 100%; font-size: 12px; margin-bottom: 10px;">
                                        <tr>
                                            <td style="width: 50%; padding-right: 10px;">
                                                <div style="background-color: white; border: 1px solid #ddd; padding: 8px;">
                                                    <strong style="color: #28a745;">Checkout Condition:</strong><br/>
                                                    <span t-esc="dict(line._fields['checkout_condition'].selection).get(line.checkout_condition, 'N/A')"/>
                                                </div>
                                            </td>
                                            <td style="width: 50%; padding-left: 10px;">
                                                <div style="background-color: white; border: 1px solid #ddd; padding: 8px;">
                                                    <strong style="color: #dc3545;">Check-in Condition:</strong><br/>
                                                    <span t-esc="dict(line._fields['checkin_condition'].selection).get(line.checkin_condition, 'N/A')"/>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>

                                    <!-- Damage Description -->
                                    <div style="background-color: white; border: 1px solid #dc3545; padding: 10px; margin-bottom: 10px;">
                                        <strong style="color: #dc3545;">Damage Description:</strong><br/>
                                        <span style="font-size: 12px;" t-esc="line.damage_description or 'See photos below'"/>
                                    </div>

                                    <!-- Check-in Photos -->
                                    <t t-if="line.checkin_photo_ids">
                                        <div>
                                            <strong style="font-size: 12px; color: #856404;">Check-in Photos:</strong>
                                            <div style="margin-top: 10px; display: flex; flex-wrap: wrap; gap: 10px;">
                                                <t t-foreach="line.checkin_photo_ids[:6]" t-as="photo">
                                                    <div style="width: 30%; border: 1px solid #ddd; padding: 5px; background-color: white;">
                                                        <img t-att-src="'data:image/png;base64,%s' % photo.datas.decode('utf-8') if isinstance(photo.datas, bytes) else 'data:image/png;base64,%s' % photo.datas"
                                                             style="width: 100%; height: auto;"
                                                             alt="Damage photo"/>
                                                    </div>
                                                </t>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                        </div>

                        <!-- Total Repair Cost -->
                        <div style="margin-bottom: 20px; page-break-inside: avoid;">
                            <table style="width: 100%; font-size: 14px;">
                                <tr style="background-color: #dc3545; color: white;">
                                    <td style="padding: 12px; text-align: right; font-weight: bold;">
                                        TOTAL REPAIR COST:
                                    </td>
                                    <td style="padding: 12px; text-align: right; font-weight: bold; width: 30%;">
                                        $<span t-esc="'%.2f' % o.total_damage_cost"/>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Financial Responsibility Notice -->
                        <div style="background-color: #e3f2fd; border-left: 4px solid #0066cc; padding: 15px; margin-bottom: 20px; page-break-inside: avoid;">
                            <h6 style="margin: 0 0 8px 0; color: #003366; font-weight: bold;">Financial Responsibility</h6>
                            <p style="margin: 0; font-size: 12px; line-height: 1.5; color: #003366;">
                                As per the Student Asset Use Agreement signed on <span t-esc="o.checkout_sign_date.strftime('%B %d, %Y') if o.checkout_sign_date else 'N/A'"/>,
                                parents/guardians are financially responsible for damage to school assets caused by negligence, misuse, or
                                intentional damage. The IT department will contact you within 3-5 business days regarding payment arrangements
                                for the above repair costs.
                            </p>
                        </div>

                        <!-- Signature Section -->
                        <div style="margin-top: 30px; page-break-inside: avoid;">
                            <h5 style="background-color: #17a2b8; color: white; padding: 8px 10px; margin-bottom: 15px;">
                                Parent/Guardian Acknowledgment
                            </h5>

                            <div style="margin-bottom: 20px;">
                                <p style="font-size: 12px; font-weight: bold; margin-bottom: 10px;">
                                    By signing below, I acknowledge that I have reviewed the damage assessment above and understand
                                    my financial responsibility for the repair costs as outlined in the Asset Use Agreement.
                                </p>
                            </div>

                            <table style="width: 100%; margin-top: 20px;">
                                <tr>
                                    <td style="width: 60%; vertical-align: top; padding-right: 20px;">
                                        <!-- Parent Signature -->
                                        <div style="margin-bottom: 10px;">
                                            <strong>Parent/Guardian Signature:</strong>
                                        </div>
                                        <div style="border: 2px solid #17a2b8; padding: 10px; background-color: #f8f9fa; min-height: 120px; text-align: center;">
                                            <t t-if="o.damage_signature">
                                                <img t-att-src="image_data_uri(o.damage_signature)"
                                                     style="max-width: 100%; max-height: 100px;"
                                                     alt="Parent Signature"/>
                                            </t>
                                            <t t-else="">
                                                <span style="color: #999; font-style: italic;">Parent Signature</span>
                                            </t>
                                        </div>
                                        <div style="margin-top: 8px;">
                                            <strong>Name:</strong> <span t-esc="o.parent_name"/><br/>
                                            <strong>Date:</strong> <span t-esc="o.damage_acknowledge_date.strftime('%B %d, %Y at %I:%M %p') if o.damage_acknowledge_date else 'N/A'"/><br/>
                                            <strong>IP Address:</strong> <span t-esc="o.damage_acknowledge_ip or 'N/A'"/>
                                        </div>
                                    </td>
                                    <td style="width: 40%; vertical-align: top;">
                                        <!-- Signature Details -->
                                        <div style="background-color: #d1ecf1; padding: 15px; border-left: 4px solid #17a2b8;">
                                            <p style="margin: 0 0 8px 0; font-size: 11px; font-weight: bold;">
                                                ‚úÖ Acknowledgment Verified
                                            </p>
                                            <p style="margin: 0; font-size: 10px; line-height: 1.4;">
                                                This damage report was acknowledged electronically via the MYIS Asset Management System.
                                                The signature was captured on <span t-esc="o.damage_acknowledge_date.strftime('%B %d, %Y at %I:%M %p') if o.damage_acknowledge_date else 'N/A'"/>
                                                from IP address <span t-esc="o.damage_acknowledge_ip or 'Unknown'"/>.
                                            </p>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Footer -->
                        <div style="margin-top: 40px; padding-top: 15px; border-top: 1px solid #dee2e6; font-size: 10px; color: #666; text-align: center;">
                            <p style="margin: 0;">
                                üìÑ Signed online via MYIS Asset Management System | Document ID: <span t-esc="o.name"/>
                            </p>
                            <p style="margin: 5px 0 0 0;">
                                For questions, contact: MYIS IT Department
                            </p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_student_damage_report" model="ir.actions.report">
        <field name="name">Student Damage Report</field>
        <field name="model">asset.student.assignment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_asset_management.report_signed_damage_report</field>
        <field name="report_file">school_asset_management.report_signed_damage_report</field>
        <field name="binding_model_id" ref="model_asset_student_assignment"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_assignment"/>
    </record>
</odoo>
