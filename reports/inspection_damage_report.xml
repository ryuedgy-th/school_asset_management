<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inspection Damage Report PDF (Compact A4) -->
    <template id="report_inspection_damage_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: 'Sarabun', 'THSarabunNew', 'Garuda', sans-serif;">
                        <!-- Header -->
                        <div class="text-center" style="margin-bottom: 10px; border-bottom: 2px solid #dc3545; padding-bottom: 8px;">
                            <h3 style="color: #dc3545; margin-bottom: 4px; font-weight: bold; font-size: 18px;">⚠️ INSPECTION DAMAGE REPORT</h3>
                            <h5 style="color: #003366; margin-top: 0; margin-bottom: 2px; font-size: 13px;">MYIS International School</h5>
                            <p style="font-size: 10px; color: #666; margin: 0;">
                                <t t-if="o.custodian_type == 'teacher' and o.teacher_signature_date">
                                    Signed: <span t-esc="o.teacher_signature_date.strftime('%b %d, %Y %I:%M %p')"/>
                                </t>
                                <t t-elif="o.custodian_type == 'student' and o.parent_signature_date">
                                    Signed: <span t-esc="o.parent_signature_date.strftime('%b %d, %Y %I:%M %p')"/>
                                </t>
                                <t t-else="">
                                    Generated: <span t-esc="datetime.datetime.now().strftime('%b %d, %Y %I:%M %p')"/>
                                </t>
                            </p>
                        </div>

                        <!-- Inspection Information -->
                        <div style="margin-bottom: 8px;">
                            <h6 style="background-color: #003366; color: white; padding: 4px 8px; margin-bottom: 5px; font-size: 11px;">
                                Inspection Information
                            </h6>
                            <table style="width: 100%; font-size: 10px;">
                                <tr>
                                    <td style="width: 22%; padding: 2px;"><strong>Date:</strong></td>
                                    <td style="width: 28%; padding: 2px;"><span t-esc="o.inspection_date.strftime('%b %d, %Y') if o.inspection_date else 'N/A'"/></td>
                                    <td style="width: 15%; padding: 2px;"><strong>Type:</strong></td>
                                    <td style="width: 35%; padding: 2px;"><span t-esc="dict(o._fields['inspection_type'].selection).get(o.inspection_type, 'N/A')"/></td>
                                </tr>
                                <tr>
                                    <td style="padding: 2px;"><strong>Inspector:</strong></td>
                                    <td style="padding: 2px;"><span t-esc="o.inspector_id.name"/></td>
                                    <td style="padding: 2px;"><strong>Ref:</strong></td>
                                    <td style="padding: 2px;"><span t-esc="o.name"/></td>
                                </tr>
                                <tr>
                                    <td style="padding: 2px;"><strong>Asset Code:</strong></td>
                                    <td style="padding: 2px;"><strong><span t-esc="o.asset_id.asset_code"/></strong></td>
                                    <td style="padding: 2px;"><strong>Asset:</strong></td>
                                    <td style="padding: 2px;"><span t-esc="o.asset_id.name or 'N/A'"/></td>
                                </tr>
                            </table>
                        </div>

                        <!-- Custodian Information -->
                        <div style="margin-bottom: 8px;">
                            <h6 style="background-color: #17a2b8; color: white; padding: 4px 8px; margin-bottom: 5px; font-size: 11px;">
                                Current Custodian
                            </h6>
                            <table style="width: 100%; font-size: 10px;">
                                <tr>
                                    <td style="width: 22%; padding: 2px;"><strong>Type:</strong></td>
                                    <td style="padding: 2px;">
                                        <t t-if="o.custodian_type == 'teacher'">Teacher</t>
                                        <t t-elif="o.custodian_type == 'student'">Student</t>
                                        <t t-else="">No Custodian</t>
                                    </td>
                                </tr>
                                <t t-if="o.custodian_type == 'teacher'">
                                    <tr>
                                        <td style="padding: 2px;"><strong>Name:</strong></td>
                                        <td style="padding: 2px;"><span t-esc="o.custodian_id.name"/></td>
                                    </tr>
                                </t>
                                <t t-if="o.custodian_type == 'student'">
                                    <tr>
                                        <td style="padding: 2px;"><strong>Student:</strong></td>
                                        <td style="padding: 2px;"><span t-esc="o.student_name"/></td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 2px;"><strong>Parent:</strong></td>
                                        <td style="padding: 2px;"><span t-esc="o.parent_name"/> (<span t-esc="o.parent_email"/>)</td>
                                    </tr>
                                </t>
                            </table>
                        </div>

                        <!-- Damage Alert -->
                        <div style="background-color: #fff3cd; border: 1px solid #ffc107; padding: 6px; margin-bottom: 8px;">
                            <p style="margin: 0; color: #856404; font-size: 9px; line-height: 1.3;">
                                <strong>⚠️ DAMAGE IDENTIFIED:</strong>
                                <t t-if="o.custodian_type == 'teacher'">
                                    Asset damaged during inspection. Teacher acknowledgment required.
                                </t>
                                <t t-elif="o.custodian_type == 'student'">
                                    Asset damaged during inspection. Parents/guardians financially responsible per Asset Use Agreement.
                                </t>
                                <t t-else="">
                                    Asset damaged during inspection. Not assigned to custodian.
                                </t>
                            </p>
                        </div>

                        <!-- Damage Assessment -->
                        <div style="margin-bottom: 8px;">
                            <h6 style="background-color: #dc3545; color: white; padding: 4px 8px; margin-bottom: 5px; font-size: 11px;">
                                Damage Assessment
                            </h6>

                            <div style="border: 1px solid #ffc107; background-color: #fff3cd; padding: 6px;">
                                <!-- Condition Comparison -->
                                <table style="width: 100%; font-size: 9px; margin-bottom: 6px;">
                                    <tr>
                                        <td style="width: 50%; padding-right: 5px;">
                                            <div style="background-color: white; border: 1px solid #ddd; padding: 3px;">
                                                <strong style="color: #28a745;">Before:</strong>
                                                <span t-esc="dict(o._fields['condition_before'].selection).get(o.condition_before, 'N/A') if o.condition_before else 'N/A'"/>
                                            </div>
                                        </td>
                                        <td style="width: 50%; padding-left: 5px;">
                                            <div style="background-color: white; border: 1px solid #ddd; padding: 3px;">
                                                <strong style="color: #dc3545;">After:</strong>
                                                <span t-esc="dict(o._fields['condition_after'].selection).get(o.condition_after, 'N/A')"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                                <!-- Damage Description -->
                                <div style="background-color: white; border: 1px solid #dc3545; padding: 4px; margin-bottom: 6px; font-size: 9px;">
                                    <strong style="color: #dc3545;">Damage:</strong>
                                    <span t-esc="o.damage_description or 'See inspection notes and photos'"/>
                                </div>

                                <!-- Issues Found -->
                                <t t-if="o.issues_found">
                                    <div style="background-color: white; border: 1px solid #ffc107; padding: 4px; margin-bottom: 6px; font-size: 9px;">
                                        <strong style="color: #856404;">Issues:</strong>
                                        <span t-esc="o.issues_found[:200] + '...' if len(o.issues_found) > 200 else o.issues_found"/>
                                    </div>
                                </t>

                                <!-- Action Required -->
                                <div style="background-color: white; border: 1px solid #ddd; padding: 4px; margin-bottom: 6px; font-size: 9px;">
                                    <strong>Action:</strong>
                                    <t t-if="o.action_required == 'repair'">
                                        <span style="background-color: #ffc107; color: #000; padding: 2px 6px; border-radius: 2px; font-weight: bold;">REPAIR NEEDED</span>
                                    </t>
                                    <t t-elif="o.action_required == 'replace'">
                                        <span style="background-color: #dc3545; color: white; padding: 2px 6px; border-radius: 2px; font-weight: bold;">REPLACE</span>
                                    </t>
                                    <t t-elif="o.action_required == 'monitor'">
                                        <span style="background-color: #17a2b8; color: white; padding: 2px 6px; border-radius: 2px;">Monitor</span>
                                    </t>
                                    <t t-else="">
                                        <span style="background-color: #28a745; color: white; padding: 2px 6px; border-radius: 2px;">None</span>
                                    </t>
                                </div>

                                <!-- Repair Cost -->
                                <t t-if="o.repair_cost and o.repair_cost > 0">
                                    <div style="background-color: #dc3545; color: white; padding: 5px; text-align: right; font-weight: bold; font-size: 11px;">
                                        Estimated Repair: $<span t-esc="'%.2f' % o.repair_cost"/>
                                    </div>
                                </t>

                                <!-- Photos (max 3) -->
                                <t t-if="o.photo_ids">
                                    <div style="margin-top: 6px;">
                                        <div style="font-size: 9px; margin-bottom: 2px;"><strong>Photos:</strong></div>
                                        <div style="display: flex; gap: 4px;">
                                            <t t-foreach="o.photo_ids[:3]" t-as="photo">
                                                <div style="width: 30%; border: 1px solid #ddd; padding: 2px; background-color: white;">
                                                    <img t-att-src="'data:image/png;base64,%s' % photo.datas.decode('utf-8') if isinstance(photo.datas, bytes) else 'data:image/png;base64,%s' % photo.datas"
                                                         style="width: 100%; height: auto; max-height: 60px; object-fit: cover;"
                                                         alt="Inspection"/>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>

                        <!-- Financial Notice (students only) -->
                        <t t-if="o.custodian_type == 'student' and o.repair_cost and o.repair_cost > 0">
                            <div style="background-color: #e3f2fd; border-left: 3px solid #0066cc; padding: 6px; margin-bottom: 8px;">
                                <p style="margin: 0; font-size: 9px; line-height: 1.3; color: #003366;">
                                    <strong>Financial Responsibility:</strong> Per Student Asset Use Agreement, parents are financially responsible for damage. IT will contact you within 3-5 business days.
                                </p>
                            </div>
                        </t>

                        <!-- Teacher Acknowledgment -->
                        <t t-if="o.custodian_type == 'teacher' and o.teacher_damage_acknowledged">
                            <div style="margin-top: 10px;">
                                <h6 style="background-color: #17a2b8; color: white; padding: 4px 8px; margin-bottom: 6px; font-size: 11px;">
                                    Teacher Acknowledgment
                                </h6>

                                <p style="font-size: 9px; font-weight: bold; margin-bottom: 6px;">
                                    I acknowledge reviewing the inspection findings and damage assessment.
                                </p>

                                <table style="width: 100%; margin-top: 6px;">
                                    <tr>
                                        <td style="width: 55%; vertical-align: top; padding-right: 10px;">
                                            <div style="margin-bottom: 4px; font-size: 10px;"><strong>Signature:</strong></div>
                                            <div style="border: 2px solid #17a2b8; padding: 6px; background-color: #f8f9fa; min-height: 70px; text-align: center;">
                                                <t t-if="o.teacher_signature">
                                                    <img t-att-src="image_data_uri(o.teacher_signature)"
                                                         style="max-width: 100%; max-height: 60px;" alt="Signature"/>
                                                </t>
                                            </div>
                                            <div style="margin-top: 4px; font-size: 9px;">
                                                <strong>Name:</strong> <span t-esc="o.custodian_id.name"/><br/>
                                                <strong>Date:</strong> <span t-esc="o.teacher_signature_date.strftime('%b %d, %Y %I:%M %p') if o.teacher_signature_date else 'N/A'"/>
                                            </div>
                                            <t t-if="o.teacher_response">
                                                <div style="margin-top: 4px; background-color: #f8f9fa; padding: 4px; border-left: 2px solid #17a2b8; font-size: 9px;">
                                                    <strong>Response:</strong><br/>
                                                    <span t-esc="o.teacher_response[:150] + '...' if len(o.teacher_response) > 150 else o.teacher_response"/>
                                                </div>
                                            </t>
                                        </td>
                                        <td style="width: 45%; vertical-align: top;">
                                            <div style="background-color: #d1ecf1; padding: 8px; border-left: 3px solid #17a2b8;">
                                                <p style="margin: 0 0 4px 0; font-size: 10px; font-weight: bold;">✅ Recorded</p>
                                                <p style="margin: 0; font-size: 8px; line-height: 1.3;">
                                                    Acknowledged in IT presence on <span t-esc="o.teacher_signature_date.strftime('%b %d, %Y %I:%M %p') if o.teacher_signature_date else 'N/A'"/>.
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </t>

                        <!-- Parent Acknowledgment -->
                        <t t-if="o.custodian_type == 'student' and o.parent_damage_acknowledged">
                            <div style="margin-top: 10px;">
                                <h6 style="background-color: #17a2b8; color: white; padding: 4px 8px; margin-bottom: 6px; font-size: 11px;">
                                    Parent/Guardian Acknowledgment
                                </h6>

                                <p style="font-size: 9px; font-weight: bold; margin-bottom: 6px;">
                                    I acknowledge reviewing the inspection findings and understand my financial responsibility per the Asset Use Agreement.
                                </p>

                                <table style="width: 100%; margin-top: 6px;">
                                    <tr>
                                        <td style="width: 55%; vertical-align: top; padding-right: 10px;">
                                            <div style="margin-bottom: 4px; font-size: 10px;"><strong>Signature:</strong></div>
                                            <div style="border: 2px solid #17a2b8; padding: 6px; background-color: #f8f9fa; min-height: 70px; text-align: center;">
                                                <t t-if="o.parent_signature">
                                                    <img t-att-src="image_data_uri(o.parent_signature)"
                                                         style="max-width: 100%; max-height: 60px;" alt="Signature"/>
                                                </t>
                                            </div>
                                            <div style="margin-top: 4px; font-size: 9px;">
                                                <strong>Name:</strong> <span t-esc="o.parent_name"/><br/>
                                                <strong>Date:</strong> <span t-esc="o.parent_signature_date.strftime('%b %d, %Y %I:%M %p') if o.parent_signature_date else 'N/A'"/><br/>
                                                <strong>IP:</strong> <span t-esc="o.parent_signature_ip or 'N/A'"/>
                                            </div>
                                        </td>
                                        <td style="width: 45%; vertical-align: top;">
                                            <div style="background-color: #d1ecf1; padding: 8px; border-left: 3px solid #17a2b8;">
                                                <p style="margin: 0 0 4px 0; font-size: 10px; font-weight: bold;">✅ Verified</p>
                                                <p style="margin: 0; font-size: 8px; line-height: 1.3;">
                                                    Acknowledged electronically via MYIS Asset Management on <span t-esc="o.parent_signature_date.strftime('%b %d, %Y %I:%M %p') if o.parent_signature_date else 'N/A'"/> from IP <span t-esc="o.parent_signature_ip or 'Unknown'"/>.
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </t>

                        <!-- Footer -->
                        <div style="margin-top: 10px; padding-top: 6px; border-top: 1px solid #dee2e6; font-size: 8px; color: #666; text-align: center;">
                            <p style="margin: 0;">
                                <t t-if="o.custodian_type == 'student' and o.parent_damage_acknowledged">
                                    📄 Signed via MYIS Asset Management | Ref: <span t-esc="o.name"/> | Contact: MYIS IT
                                </t>
                                <t t-else="">
                                    📄 Generated via MYIS Asset Management | Ref: <span t-esc="o.name"/> | Contact: MYIS IT
                                </t>
                            </p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_inspection_damage" model="ir.actions.report">
        <field name="name">Inspection Damage Report</field>
        <field name="model">asset.inspection</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_asset_management.report_inspection_damage_report</field>
        <field name="report_file">school_asset_management.report_inspection_damage_report</field>
        <field name="binding_model_id" ref="model_asset_inspection"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_assignment"/>
    </record>
</odoo>
