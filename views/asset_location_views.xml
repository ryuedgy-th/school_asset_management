<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Asset Location Tree View -->
    <record id="view_asset_location_tree" model="ir.ui.view">
        <field name="name">asset.location.tree</field>
        <field name="model">asset.location</field>
        <field name="arch" type="xml">
            <list string="Asset Locations">
                <field name="name"/>
                <field name="code"/>
                <field name="location_type"/>
                <field name="parent_id"/>
                <field name="asset_count"/>
            </list>
        </field>
    </record>

    <!-- Asset Location Form View -->
    <record id="view_asset_location_form" model="ir.ui.view">
        <field name="name">asset.location.form</field>
        <field name="model">asset.location</field>
        <field name="arch" type="xml">
            <form string="Asset Location">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_assets" type="object"
                                class="oe_stat_button" icon="fa-cube">
                            <field name="asset_count" widget="statinfo" string="Assets"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="location_type"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="capacity"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Child Locations">
                            <field name="child_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="location_type"/>
                                    <field name="asset_count"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Asset Location Action -->
    <record id="action_asset_location" model="ir.actions.act_window">
        <field name="name">Asset Locations</field>
        <field name="res_model">asset.location</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first asset location
            </p>
        </field>
    </record>

</odoo>
