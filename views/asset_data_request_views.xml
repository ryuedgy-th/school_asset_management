<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Data Request List View -->
    <record id="view_asset_data_request_tree" model="ir.ui.view">
        <field name="name">asset.data.request.view.list</field>
        <field name="model">asset.data.request</field>
        <field name="arch" type="xml">
            <list string="Data Subject Requests" decoration-danger="is_overdue" decoration-success="status == 'completed'">
                <field name="name"/>
                <field name="request_type"/>
                <field name="requester_name"/>
                <field name="requester_email"/>
                <field name="requester_type"/>
                <field name="request_date"/>
                <field name="deadline_date"/>
                <field name="days_remaining" decoration-danger="days_remaining &lt; 7" decoration-warning="days_remaining &lt; 14"/>
                <field name="status" widget="badge" decoration-info="status in ('draft', 'submitted')"
                       decoration-warning="status in ('under_review', 'identity_verification', 'processing')"
                       decoration-success="status == 'completed'" decoration-danger="status in ('rejected', 'cancelled')"/>
                <field name="assigned_to"/>
                <field name="identity_verified" widget="boolean_toggle"/>
                <field name="is_overdue" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Data Request Form View -->
    <record id="view_asset_data_request_form" model="ir.ui.view">
        <field name="name">asset.data.request.view.form</field>
        <field name="model">asset.data.request</field>
        <field name="arch" type="xml">
            <form string="Data Subject Request">
                <header>
                    <button name="action_submit" string="Submit Request" type="object"
                            invisible="status != 'draft'" class="btn-primary"/>
                    <button name="action_start_verification" string="Start Verification" type="object"
                            invisible="status not in ('submitted', 'under_review')" class="btn-secondary"
                            groups="school_asset_management.group_asset_manager"/>
                    <button name="action_verify_identity" string="Verify Identity" type="object"
                            invisible="status != 'identity_verification'" class="btn-success"
                            groups="school_asset_management.group_asset_manager"/>
                    <button name="action_process_access_request" string="Process Access Request" type="object"
                            invisible="status != 'processing' or request_type != 'access'" class="btn-primary"
                            groups="school_asset_management.group_asset_manager"/>
                    <button name="action_process_erasure_request" string="Process Erasure Request" type="object"
                            invisible="status != 'processing' or request_type != 'erasure'" class="btn-danger"
                            groups="school_asset_management.group_asset_manager"
                            confirm="Are you sure you want to process erasure request? This will anonymize/delete personal data."/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,submitted,under_review,identity_verification,processing,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Deadline Warning -->
                        <div class="alert alert-danger" role="alert" invisible="not is_overdue">
                            <strong>OVERDUE!</strong> This request is <field name="days_remaining"/> days overdue.
                            PDPA requires response within 30 days.
                        </div>
                        <div class="alert alert-warning" role="alert" invisible="is_overdue or days_remaining &gt; 7 or status in ('completed', 'rejected', 'cancelled')">
                            <strong>Urgent:</strong> Only <field name="days_remaining"/> days remaining until deadline.
                        </div>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="request_type" readonly="status != 'draft'"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Requester Information">
                            <field name="requester_name" readonly="status != 'draft'"/>
                            <field name="requester_email" readonly="status != 'draft'" widget="email"/>
                            <field name="requester_type" readonly="status != 'draft'"/>
                        </group>
                        <group string="Request Details">
                            <field name="request_date" readonly="1"/>
                            <field name="deadline_date" readonly="1"/>
                            <field name="is_overdue" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="request_description" readonly="status != 'draft'" widget="text" placeholder="Please describe your data request in detail..."/>
                    </group>
                    <notebook>
                        <page string="Identity Verification" name="verification">
                            <group>
                                <group>
                                    <field name="identity_verified" readonly="1"/>
                                    <field name="verification_method" readonly="status not in ('identity_verification', 'processing')"
                                           required="identity_verified"/>
                                    <field name="verification_date" readonly="1"/>
                                    <field name="verified_by" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Processing" name="processing" groups="school_asset_management.group_asset_manager">
                            <group>
                                <group>
                                    <field name="assigned_to"/>
                                    <field name="completion_date" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <field name="processing_notes" widget="text" placeholder="Internal notes about processing this request..."/>
                            </group>
                        </page>
                        <page string="Response" name="response">
                            <group>
                                <group>
                                    <field name="response_date" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <field name="response_message" widget="text" placeholder="Official response to the requester..."
                                       readonly="status not in ('processing', 'completed', 'rejected')"
                                       groups="school_asset_management.group_asset_manager"/>
                            </group>
                        </page>
                        <page string="Data Export" name="export" invisible="request_type not in ('access', 'portability')">
                            <group>
                                <field name="data_export_file" filename="data_export_filename" readonly="1"/>
                                <field name="data_export_filename" invisible="1"/>
                            </group>
                        </page>
                        <page string="Related Records" name="related">
                            <group>
                                <field name="student_assignment_ids" widget="many2many_tags"/>
                                <field name="teacher_assignment_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Data Request Kanban View -->
    <record id="view_asset_data_request_kanban" model="ir.ui.view">
        <field name="name">asset.data.request.view.kanban</field>
        <field name="model">asset.data.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="name"/>
                <field name="request_type"/>
                <field name="requester_name"/>
                <field name="requester_email"/>
                <field name="request_date"/>
                <field name="deadline_date"/>
                <field name="days_remaining"/>
                <field name="is_overdue"/>
                <field name="status"/>
                <field name="identity_verified"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click" t-att-class="record.is_overdue.raw_value ? 'oe_kanban_color_2' : ''">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="badge" t-att-class="record.is_overdue.raw_value ? 'badge-danger' : (record.days_remaining.raw_value &lt; 7 ? 'badge-warning' : 'badge-secondary')">
                                        <t t-if="record.days_remaining.raw_value &gt; 0">
                                            <t t-esc="record.days_remaining.value"/> days left
                                        </t>
                                        <t t-else="">
                                            OVERDUE
                                        </t>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="request_type" widget="badge"/>
                                    <div>
                                        <i class="fa fa-user"/> <field name="requester_name"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-envelope"/> <field name="requester_email"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar"/> <field name="request_date"/>
                                    </div>
                                    <div t-if="record.identity_verified.raw_value">
                                        <span class="badge badge-success">
                                            <i class="fa fa-check"/> Identity Verified
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Data Request Search View -->
    <record id="view_asset_data_request_search" model="ir.ui.view">
        <field name="name">asset.data.request.view.search</field>
        <field name="model">asset.data.request</field>
        <field name="arch" type="xml">
            <search string="Search Data Requests">
                <field name="name"/>
                <field name="requester_name"/>
                <field name="requester_email"/>
                <field name="request_type"/>
                <separator/>
                <filter name="filter_my_requests" string="My Requests"
                        domain="[('assigned_to', '=', uid)]"/>
                <filter name="filter_unassigned" string="Unassigned"
                        domain="[('assigned_to', '=', False), ('status', 'not in', ('draft', 'completed', 'rejected', 'cancelled'))]"/>
                <filter name="filter_overdue" string="Overdue"
                        domain="[('is_overdue', '=', True)]"/>
                <filter name="filter_urgent" string="Urgent (&lt; 7 days)"
                        domain="[('days_remaining', '&lt;', 7), ('status', 'not in', ('completed', 'rejected', 'cancelled'))]"/>
                <filter name="filter_pending_verification" string="Pending Verification"
                        domain="[('status', '=', 'identity_verification')]"/>
                <separator/>
                <filter name="filter_access" string="Right to Access"
                        domain="[('request_type', '=', 'access')]"/>
                <filter name="filter_erasure" string="Right to Erasure"
                        domain="[('request_type', '=', 'erasure')]"/>
                <filter name="filter_rectification" string="Right to Rectification"
                        domain="[('request_type', '=', 'rectification')]"/>
                <filter name="filter_portability" string="Right to Portability"
                        domain="[('request_type', '=', 'portability')]"/>
                <separator/>
                <filter name="filter_parent" string="Parent Requests"
                        domain="[('requester_type', '=', 'parent')]"/>
                <filter name="filter_teacher" string="Teacher Requests"
                        domain="[('requester_type', '=', 'teacher')]"/>
                <filter name="filter_student" string="Student Requests"
                        domain="[('requester_type', '=', 'student')]"/>
                <separator/>
                <group name="group_by">
                    <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                    <filter name="group_request_type" string="Request Type" context="{'group_by': 'request_type'}"/>
                    <filter name="group_assigned_to" string="Assigned To" context="{'group_by': 'assigned_to'}"/>
                    <filter name="group_requester_type" string="Requester Type" context="{'group_by': 'requester_type'}"/>
                    <filter name="group_request_date" string="Request Date" context="{'group_by': 'request_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Data Request Action -->
    <record id="action_asset_data_request" model="ir.actions.act_window">
        <field name="name">Data Subject Requests</field>
        <field name="res_model">asset.data.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_filter_overdue': 1, 'search_default_filter_urgent': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data subject requests found
            </p>
            <p>
                This page manages all PDPA data subject rights requests.
                Requests must be processed within 30 days by law.
            </p>
            <p>
                <strong>Request Types:</strong>
                <ul>
                    <li>Right to Access (ขอเข้าถึงข้อมูล)</li>
                    <li>Right to Rectification (ขอแก้ไขข้อมูล)</li>
                    <li>Right to Erasure (ขอลบข้อมูล)</li>
                    <li>Right to Restriction (ขอระงับการใช้)</li>
                    <li>Right to Data Portability (ขอโอนย้ายข้อมูล)</li>
                    <li>Right to Object (ขอคัดค้าน)</li>
                    <li>Withdraw Consent (เพิกถอนความยินยอม)</li>
                </ul>
            </p>
        </field>
    </record>

</odoo>
