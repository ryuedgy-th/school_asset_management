<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Asset Assignment Line Tree View -->
    <record id="view_asset_assignment_line_tree" model="ir.ui.view">
        <field name="name">asset.assignment.line.tree</field>
        <field name="model">asset.assignment.line</field>
        <field name="arch" type="xml">
            <list string="Assignment Lines">
                <field name="assignment_id"/>
                <field name="asset_id"/>
                <field name="asset_code"/>
                <field name="asset_name"/>
                <field name="asset_category"/>
                <field name="checkout_condition"/>
                <field name="checkin_condition"/>
                <field name="damage_found"/>
                <field name="repair_cost" sum="Total Repair Cost"/>
            </list>
        </field>
    </record>

    <!-- Asset Assignment Line Form View -->
    <record id="view_asset_assignment_line_form" model="ir.ui.view">
        <field name="name">asset.assignment.line.form</field>
        <field name="model">asset.assignment.line</field>
        <field name="arch" type="xml">
            <form string="Assignment Line">
                <sheet>
                    <group>
                        <group string="Asset Information">
                            <field name="assignment_id"/>
                            <field name="asset_id"/>
                            <field name="asset_code"/>
                            <field name="asset_name"/>
                            <field name="asset_category"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Checkout">
                            <group>
                                <field name="checkout_condition"/>
                                <field name="checkout_notes"/>
                            </group>
                            <separator string="Checkout Photos"/>
                            <field name="checkout_photo_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Check-in">
                            <group>
                                <field name="checkin_condition"/>
                                <field name="checkin_notes"/>
                            </group>
                            <separator string="Check-in Photos"/>
                            <field name="checkin_photo_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Damage Information">
                            <group>
                                <field name="damage_found"/>
                                <field name="damage_description"/>
                                <field name="repair_cost"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
