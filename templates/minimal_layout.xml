<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Minimal Layout without Header/Navbar for Signature Pages -->
    <template id="minimal_layout" name="Minimal Layout (No Header)">
        <t t-set="no_header" t-value="True"/>
        <t t-set="no_footer" t-value="True"/>

        <html t-att-lang="lang and lang.replace('_', '-')"
              t-att-data-website-id="website.id if website else None">
            <head>
                <meta charset="utf-8"/>
                <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
                <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"/>

                <t t-if="main_object and 'website_meta_title' in main_object and main_object.website_meta_title">
                    <title><t t-esc="main_object.website_meta_title"/></title>
                </t>
                <t t-else="">
                    <title><t t-esc="title or 'Signature Page'"/></title>
                </t>

                <!-- Bootstrap CSS from CDN -->
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>

                <!-- Font Awesome from CDN -->
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous"/>

                <!-- Custom Styles -->
                <t t-raw="head if head else ''"/>

                <style>
                    body {
                        background-color: #f8f9fa;
                        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
                    }
                </style>
            </head>
            <body>
                <t t-raw="0"/>

                <!-- Bootstrap JS from CDN -->
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            </body>
        </html>
    </template>
</odoo>
