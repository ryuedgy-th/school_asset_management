<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- IT Staff Group - สร้างก่อน -->
        <record id="group_asset_user" model="res.groups">
            <field name="name">Asset Management / User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Create, read, and update assets and assignments</field>
        </record>

        <!-- IT Manager Group - สร้างทีหลัง -->
        <record id="group_asset_manager" model="res.groups">
            <field name="name">Asset Management / Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_asset_user'))]"/>
            <field name="comment">Full access to all asset management features</field>
        </record>

        <!-- Teacher Group -->
        <record id="group_asset_teacher" model="res.groups">
            <field name="name">Asset Management / Teacher</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Read-only access to own assignments</field>
        </record>

        <!-- Record Rules -->

        <!-- Asset Rules -->
        <record id="asset_manager_rule" model="ir.rule">
            <field name="name">Asset Manager: Full Access</field>
            <field name="model_id" ref="model_asset_asset"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="asset_user_rule" model="ir.rule">
            <field name="name">Asset User: Full Access</field>
            <field name="model_id" ref="model_asset_asset"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="asset_teacher_rule" model="ir.rule">
            <field name="name">Teacher: Read Only Assets</field>
            <field name="model_id" ref="model_asset_asset"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Teacher Assignment Rules -->
        <record id="teacher_assignment_manager_rule" model="ir.rule">
            <field name="name">Teacher Assignment Manager: Full Access</field>
            <field name="model_id" ref="model_asset_teacher_assignment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="teacher_assignment_user_rule" model="ir.rule">
            <field name="name">Teacher Assignment User: Full Access</field>
            <field name="model_id" ref="model_asset_teacher_assignment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="teacher_assignment_teacher_rule" model="ir.rule">
            <field name="name">Teacher: Own Assignments Only</field>
            <field name="model_id" ref="model_asset_teacher_assignment"/>
            <field name="domain_force">[('teacher_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_asset_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Student Assignment Rules -->
        <record id="student_assignment_manager_rule" model="ir.rule">
            <field name="name">Student Assignment Manager: Full Access</field>
            <field name="model_id" ref="model_asset_student_assignment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="student_assignment_user_rule" model="ir.rule">
            <field name="name">Student Assignment User: Full Access</field>
            <field name="model_id" ref="model_asset_student_assignment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
